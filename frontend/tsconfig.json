{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@@/*": [ "./src/components/*"],
      "@~/*": [ "./src/renderer/*"],
      "@asset/*": [ "./public/assets/*"],
      "@/*": [ "./src/*" ],
      "root/*": [ "./*" ],
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "*.json"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
